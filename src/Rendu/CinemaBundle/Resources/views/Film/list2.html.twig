{% extends 'RenduCinemaBundle::layout.html.twig' %}

{% block title %}List des films{% endblock %}


{% block body %}
    <div class="row">

        <div class="col-md-3">
            <p class="lead">Cinéma</p>
            <div class="list-group">
                <a href="{{ path('list_des_films') }}" class="list-group-item ">Films</a>
                <a href="{{ path('list_des_realisateurs') }}" class="list-group-item active">Réalisateurs</a>
            </div>
        </div>

        <div class="col-md-9">

            <h2>Liste des realisateurs</h2>

            <br />

            {% for real in reals %}
                <div class="well">
                    <div class="row">
                        <div class="col-md-12">
                            <strong>{{ real.nom }} {{ real.prenom }}</strong> ({{ real.getAge() }} ans)<br />
                            <br />
                            <p>{{ real.desc }}</p>
                            <hr />
                            <div class="text-right">
                                <a href="{{ path('real_films', {'id': real.id}) }}" class="btn btn-success">Voir ses films</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}


        </div>


    </div>

{% endblock %}