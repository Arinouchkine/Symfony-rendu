{% extends 'RenduCinemaBundle::layout.html.twig' %}

{% block title %}List des films de {{ auth.prenom }} {{ auth.nom }}{% endblock %}


{% block body %}
    <div class="row">

    <div class="col-md-3">
        <p class="lead">Cinéma</p>
        <div class="list-group">
            <a href="{{ path('list_des_films') }}" class="list-group-item active">Films</a>
            <a href="{{ path('list_des_realisateurs') }}" class="list-group-item">Réalisateurs</a>
        </div>
    </div>

    <div class="col-md-9">

        <h2>Liste des films de {{ auth.prenom }} {{ auth.nom }}</h2>

        <br />

        {% for film in films %}
            <div class="thumbnail">
                <div class="caption-full">
                    <h4 class="pull-right">{{ film.genre }}</h4>
                    <h4>{{ film.titre }}</h4>
                    <p>{{ film.synopsis }}</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">sorti le {{ film.datedesortie|date('Y-m-d') }}</p>
                    <p>Réalisé par : <a href="{{ path('list_des_realisateurs') }}">{{ film.realisateur }}</a></p>
                </div>
            </div>
        {% endfor %}



    </div>

{% endblock %}